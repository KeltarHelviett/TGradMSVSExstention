<Window x:Class="TGradMSVSExtention.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TGradMSVSExtention"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500" MaxWidth="800" MaxHeight="700" Width="600" Height="409">
    <Grid>
        <TreeView x:Name="treeView" Margin="10,30,0,10" FontSize="14" HorizontalAlignment="Left" Width="150">
            <TreeViewItem x:Name="GeneralTVI" Header="General" IsExpanded="True">
                <TreeViewItem x:Name="GeneralTemplatesTVI" Header="Templates" HorizontalAlignment="Left" Width="127" Selected="GeneralTemplatesTVISelected"/>
            </TreeViewItem>
        </TreeView>
        <StackPanel x:Name="SettingsPanel" Margin="165,30,10,10"/>

    </Grid>
</Window>
